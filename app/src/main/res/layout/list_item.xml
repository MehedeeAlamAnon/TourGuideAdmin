<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#005b96">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#005b96">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/shape_2">

    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />


            <TextView
                android:id="@+id/nameTextView"
                style="@style/locationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textColor="#FFFFFF" />


            <TextView
                android:id="@+id/descriptionTextView"
                style="@style/locationDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />


    <TextView
        android:id="@+id/addressTextView"
        style="@style/locationAddressSchedulePricePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="map"
        android:drawableLeft="@drawable/ic_add_location_black_24dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/workHoursTextView"
        style="@style/locationAddressSchedulePricePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_schedule_black_24dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/phoneTextView"
        style="@style/locationAddressSchedulePricePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/siteTextView"
        style="@style/locationAddressSchedulePricePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:drawableLeft="@drawable/ic_site_black_24px"
        android:text=""
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>



        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>